<% layout('layouts/boilerplate') %>
<div class="container">
  <hr />
  <h1 class="text-uppercase text-center"><%= quiz.title %> QUIZ</h1>
  <hr />
  <form action="/quiz/<%= quiz._id %>" method="POST">
    <% let i = 1 %> <% for (let q of quiz.questions) {%>
    <div class="card bg-dark text-light mb-3 mx-auto" style="width: 55rem">
      <div class="card-body">
        <h5 class="card-title"><%= i %>.) <%= q.question %></h5>
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="question-<%= i %>"
            id="q<%= i %>-opt1"
            value="<%= q.option1 %>"
          />
          <label class="form-check-label" for="q<%= i %>-opt1">
            <%= q.option1 %>
          </label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="question-<%= i %>"
            id="q<%= i %>-opt2"
            value="<%= q.option2 %>"
          />
          <label class="form-check-label" for="q<%= i %>-opt2">
            <%= q.option2 %>
          </label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="question-<%= i %>"
            id="q<%= i %>-opt3"
            value="<%= q.option3 %>"
          />
          <label class="form-check-label" for="q<%= i %>-opt3">
            <%= q.option3 %>
          </label>
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="question-<%= i %>"
            id="q<%= i %>-opt4"
            value="<%= q.option4 %>"
          />
          <label class="form-check-label" for="q<%= i %>-opt4">
            <%= q.option4 %>
          </label>
        </div>
      </div>
    </div>
    <% i++ %> <% } %>
    <div class="d-flex justify-content-center">
      <button class="btn btn-success">Submit</button>
    </div>
  </form>
</div>
