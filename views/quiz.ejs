<% layout('layouts/boilerplate') %>
<div class="container">
  <hr />
  <h1 class="text-uppercase text-center fw-bold"><%= quiz.title %> QUIZ</h1>
  <hr />
  <h4 class="d-flex justify-content-end">
    <span id="hours">00</span>:<span id="minutes">10</span>:<span id="seconds"
      >00</span
    >
  </h4>
  <div class="content">
    <form action="/quiz/<%= quiz._id %>" method="POST" id="quizForm">
      <% let i = 1 %> <% for (let q of quiz.questions) {%>
      <div
        class="card bg-dark text-light mb-3 mx-auto questions"
        style="width: 60rem"
      >
        <div class="card-body">
          <h5 class="card-title fw-bold text-uppercase mb-3">
            <%= i %>.) <%= q.question %>
          </h5>
          <div
            class="options w-100 h-100 d-flex flex-column justify-content-around"
          >
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="question-<%= i %>"
                id="q<%= i %>-opt1"
                value="<%= q.option1 %>"
              />
              <label class="form-check-label fs-5" for="q<%= i %>-opt1">
                <%= q.option1 %>
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="question-<%= i %>"
                id="q<%= i %>-opt2"
                value="<%= q.option2 %>"
              />
              <label class="form-check-label fs-5" for="q<%= i %>-opt2">
                <%= q.option2 %>
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="question-<%= i %>"
                id="q<%= i %>-opt3"
                value="<%= q.option3 %>"
              />
              <label class="form-check-label fs-5" for="q<%= i %>-opt3">
                <%= q.option3 %>
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="question-<%= i %>"
                id="q<%= i %>-opt4"
                value="<%= q.option4 %>"
              />
              <label class="form-check-label fs-5" for="q<%= i %>-opt4">
                <%= q.option4 %>
              </label>
            </div>
          </div>
        </div>
      </div>
      <% i++ %> <% } %>
      <div class="d-flex justify-content-center">
        <button class="btn btn-success" id="submit">Submit</button>
      </div>
    </form>
    <button class="btn btn-primary" id="previous">Previous</button>
    <button class="btn btn-primary" id="next">Next</button>
  </div>
</div>

<script src="/timer.js"></script>
<script src="/render.js"></script>
