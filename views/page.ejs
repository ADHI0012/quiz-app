<% layout('layouts/boilerplate') %>
<h1 class="display-2 text-center">Create your <%= title %> Quiz</h1>
<hr />

<% let i = 0; %>

<form action="/question?title=<%=title%>" method="POST">
  <span style="display: none"><%= title %></span>
  <div class="container" id="quiz-form" style="width: 576px">
    <div class="mb-3">
      <label
        for="q"
        class="form-label text-decoration-underline fs-4 text-uppercase"
        >Question 1
      </label>
      <input
        type="text"
        class="form-control p-2"
        id="q"
        placeholder="Question"
        name="question"
        required
      />
    </div>
    <div class="mb-3">
      <label for="o1" class="form-label">Option 1</label>
      <input
        type="text"
        class="form-control"
        id="o1"
        placeholder="Option 1"
        name="option1"
        required
      />
    </div>
    <div class="mb-3">
      <label for="o2" class="form-label">Option 2</label>
      <input
        type="text"
        class="form-control"
        id="o2"
        placeholder="Option 2"
        name="option2"
        required
      />
    </div>
    <div class="mb-3">
      <label for="o3" class="form-label">Option 3</label>
      <input
        type="text"
        class="form-control"
        id="o3"
        placeholder="Option 3"
        name="option3"
        required
      />
    </div>
    <div class="mb-3">
      <label for="o4" class="form-label">Option 4</label>
      <input
        type="text"
        class="form-control"
        id="o4"
        placeholder="Option 4"
        name="option4"
        required
      />
    </div>
    <div class="mb-3">
      <label for="correct-answer" class="form-label">Correct Answer</label>
      <select
        class="form-select"
        id="correct-answer"
        aria-label=""
        name="correctOption"
        required
      >
        <option selected>Open this select menu</option>
        <option value="option1">Option 1</option>
        <option value="option2">Option 2</option>
        <option value="option3">Option 3</option>
        <option value="option4">Option 4</option>
      </select>
    </div>
    <div class="d-flex-inline justify-content-center">
      <button class="btn btn-success m-2" data-max-questions="<%= qns %>">
        Add Question
      </button>

      <!-- <button class="btn btn-primary">Done</button> -->
    </div>
  </div>
</form>
<script src="/index.js"></script>
